{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: gcc build and debug active file",
            "type": "shell",
            "command": "/usr/bin/gcc",  // Chemin vers le compilateur gcc
            "args": [
                "-g",                    // Ajoute les informations de d√©bogage
                "main_tp2.c",
                "t_entree.c",
                "t_sortie.c",
                "t_pin_entree.c",
                "t_pin_sortie.c",
                "t_porte.c",
                "t_circuit.c",
                "circuit_IO.c",
                "file_portes.c",
                "-o",
                "${fileDirname}/main_tp2"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
